{% extends 'templates/app.twig' %}

{%  block content %}
    <div class="form">
        <form action="{{ path_for('auth.signup') }}" method="post" class="form-field">
            <label for="email">Email</label>
            <input type="text" name="email" id="email" placeholder="something@some.com" class="{{ errors.email ? 'haserror' : '' }}" value="{{ old.email }}">
            {%  if errors.email %}
            <span class="help-message">{{errors.email | first}}</span>
            {% endif %}

            <label for="name">Name</label>
            <input type="text" name="name" id="name" class="{{ errors.name ? 'haserror' : '' }}" value="{{ old.name }}">
                        {%  if errors.name %}
            <span class="help-message">{{errors.name | first}}</span>
            {% endif %}

            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="{{ errors.password ? 'haserror' : '' }}">
                        {%  if errors.password %}
            <span class="help-message">{{errors.password | first}}</span>
            {% endif %}

            <input type="submit" value="signup">

            {{ csrf.field | raw }}
        </form>
    </div>
{% endblock %}